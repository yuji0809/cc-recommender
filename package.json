{
  "name": "cc-recommender",
  "version": "0.9.0",
  "description": "MCP server for recommending Claude Code skills, plugins, and MCP servers",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cc-recommender": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "fetch-data": "pnpm exec tsx scripts/fetch-data.ts",
    "fetch-data:quick": "SKIP_SECURITY_SCAN=true pnpm exec tsx scripts/fetch-data.ts",
    "fetch-data:full": "SKIP_SECURITY_SCAN=false pnpm exec tsx scripts/fetch-data.ts",
    "fetch-data:plugins": "FETCH_TYPES=plugins pnpm exec tsx scripts/fetch-data.ts",
    "fetch-data:mcp": "FETCH_TYPES=mcp pnpm exec tsx scripts/fetch-data.ts",
    "fetch-data:skills": "FETCH_TYPES=skills pnpm exec tsx scripts/fetch-data.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "audit": "npx @cc-audit/cc-audit check .",
    "audit:baseline": "npx @cc-audit/cc-audit check . --save-baseline .cc-audit-baseline.json",
    "audit:drift": "npx @cc-audit/cc-audit check . --check-drift .cc-audit-baseline.json",
    "audit:watch": "npx @cc-audit/cc-audit check . --watch",
    "license:check": "npx license-checker --summary --excludePrivatePackages --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD;CC0-1.0;Unlicense'",
    "license:full": "npx license-checker --excludePrivatePackages",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run audit && pnpm run license:check",
    "prepare": "husky",
    "prepublishOnly": "pnpm run check && pnpm run build && pnpm run test"
  },
  "keywords": [
    "mcp",
    "claude-code",
    "skills",
    "plugins",
    "recommendations"
  ],
  "author": "Yuji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuji0809/cc-recommender.git"
  },
  "bugs": {
    "url": "https://github.com/yuji0809/cc-recommender/issues"
  },
  "homepage": "https://github.com/yuji0809/cc-recommender#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@cc-audit/cc-audit": "^3.2.7",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.12.3",
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "data",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
